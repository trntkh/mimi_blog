<body>
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        <div class="site-heading">
          <h1 class="text-center mb-4">ALL POSTS</h1>
        </div>
        <div class="col-12">
          <div class="d-grid gap-2 col-5 mx-auto">
            <% if user_signed_in? %>
              <%= link_to 'New Article +', new_article_path, class: "fs-5 btn btn-secondary rounded-pill" %>
            <% end %>
          </div>
        </div>
        <table>
          <% @articles.each do |article| %>       
            <tr>
              <td>
                <h2 class="post-title"><%= link_to article.title, article_path(article) %></h2>
                <h3 class="post-subtitle"><%= article.subtitle %></h3>
                <% if user_signed_in? %>
                  <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-secondary btn-sm rounded-circle" %>
                  <%= link_to 'Destroy', article_path(article), class: "btn btn-outline-secondary btn-sm rounded-circle",
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
                <% end %>
                <hr class="my-4">
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JS-->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Core theme JS-->
  <script src="js/scripts.js"></script>
</body>  
