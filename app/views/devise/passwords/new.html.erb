<section class="py-3 py-md-4 bsb-py-xl-1">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <div class="card border border-light-subtle rounded-4">
          <div class="card-body p-3 p-md-4 p-xl-5">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <h2 class="text-center mb-4">Forgot your password?</h2>
              <h6 class="text-center mb-4">(currently it hasn't worked cause hasn't configed action mailer yet)</h6>
              <div class="row gy-3 overflow-hidden">
                <div class="col-12">
                  <div class="form-floating mb-3">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  </div>
                </div>
                <div class="col-12">
                  <div class="d-grid">
                    <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center mt-4">
          <%= render "devise/shared/links", class: "link-secondary text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</section>